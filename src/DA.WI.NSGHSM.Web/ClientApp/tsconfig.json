{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "@app/core": ["src/app/core/index"],
            "@app/environments": ["src/environments/environment"],
            "@app/example": ["src/app/example/index"],
            "@app/home": ["src/app/home/index"],
            "@app/settings": ["src/app/settings/index"],
            "@app/shared": ["src/app/shared/index"],
            "@app/shell": ["src/app/shell/index"],
            "@app/test": ["src/app/test/index"],
            "@app/widget": ["src/app/widget/index"],
        }
    },
    "angularCompilerOptions": {
        "enableIvy": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "mock",
        "node_modules",
        "**/*.spec.ts"
    ]
}