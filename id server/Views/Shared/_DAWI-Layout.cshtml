@using IdentityServer4.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DA.WI Identity Server</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <link href="~/lib/kendo-ui/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/dawi-site.css" />
</head>
<body class="dawi" style="background-color: #252525;">

    <div style = "width: inherit;" class="container">

        <div style = "width: inherit;" class="logos">
            <img style = "width: 40%;" src="~/da-logo.png" />
            <img style = "width: 40%;;" src="~/customer-logo.svg" />
        </div>

        <div class="body-content">
            @RenderBody()
        </div>

    </div>

    <div class="footer">
        <a href="https://identityserver.io/">
            <span>Powered by </span>
            <img src="~/icon.png" alt="Identity Server" />
            <span> IdentityServer</span>
        </a>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
