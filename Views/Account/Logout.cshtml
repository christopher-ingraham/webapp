@{
    Layout = "_DAWI-Layout";
}

@model LogoutViewModel

<div class="logout-page text-center">
    <div class="page-header">
        <h1>Logout</h1>
    </div>

    <p>Would you like to logout of DA.WI IdentityServer?</p>
    <form asp-action="Logout">
        <input type="hidden" name="logoutId" value="@Model.LogoutId" />
        <fieldset>
            <div class="form-group">
                <button class="k-button k-primary">Yes</button>
            </div>
        </fieldset>
    </form>
</div>